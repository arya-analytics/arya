---
import Main from "@/layouts/Main.astro";
import Release from "@/pages/releases/Release.astro";
import { Icon } from "@synnaxlabs/media";
import { Align, Divider, Text } from "@synnaxlabs/pluto";
import Release0320 from "@/pages/releases/0-32-0.mdx";
---

<Main frontmatter={{ title: "Releases" }}>
    <Align.Space direction="y" className="releases" el="article" grow>
        <Align.Space direction="y" className="header" justify="center" size="large">
            <Text.Text level="h1">Releases</Text.Text>
            <Align.Space direction="y" size="small">
                <Text.Text level="p" shade={7}>
                    Latest updates and improvements to Synnax.
                </Text.Text>
                <Align.Space direction="x" align="center">
                    <Text.Link level="p"> Follow us on LinkedIn </Text.Link>
                    <Icon.Circle style={{ color: "var(--pluto-gray-l6)" }} />
                    <Text.Link level="p">View releases on GitHub</Text.Link>
                </Align.Space>
            </Align.Space>
        </Align.Space>
        <Divider.Divider direction="x" />
        <Release0320 />
    </Align.Space>
</Main>

<style is:global>
    .releases {
        margin: 0 auto;
        .header {
            height: 250px;
            padding-left: 12rem;
        }

        & video,
        img:not(.diagram img) {
            width: 100%;
            border-radius: 1rem !important;
            border: var(--pluto-border-l4);
            box-shadow: var(--pluto-shadow-l4);
            margin: 3rem 0;
            box-shadow: var(--pluto-shadow-menu);

            @media (prefers-color-scheme: dark) {
                box-shadow: 0 0 2rem 0 rgba(50, 50, 50, 0.1);
            }
        }
    }
</style>
