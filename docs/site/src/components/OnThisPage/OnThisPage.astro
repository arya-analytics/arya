---
import { OnThisPage as OTP } from "@/components/OnThisPage/OnThisPage";
const props = Astro.props;
---

<OTP client:idle {...props} />

<style is:global>
    .on-this-page {
        width: 235px;

        @media (max-width: 1100px) {
            display: none !important;
        }

        flex-shrink: 0;
        & h5 {
            font-weight: 500;
        }

        .heading {
            border-bottom: none;
        }

        & .header-link {
            box-shadow: inset -1px 0 0 0 var(--pluto-border-color);
            &.depth-3 {
                margin-left: 2rem;
            }
        }

        & .pluto-menu-item {
            border-radius: 0 !important;
            white-space: normal;
            height: fit-content;
            display: block;
            padding: 0.75rem 2rem !important;
            transition: box-shadow 0.2s ease;
            background: none !important;
            & small {
                font-weight: 400 !important;
                color: var(--pluto-gray-l6) !important;
            }
            &:is(.pluto--selected, :hover) {
                box-shadow: inset -2px 0 0 0 var(--pluto-primary-z);
                & small {
                    font-weight: 500 !important;
                    color: var(--pluto-text-color) !important;
                }
            }
        }
    }
</style>
