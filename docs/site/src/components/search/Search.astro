---
import { Search as S } from "@/components/search/Search";
---

<S client:only="react" />

<style is:global>
    .search-box {
        position: absolute;
        left: 50%;
        z-index: 50000;
        transform: translateX(-50%);
        width: 50vw !important;
        max-width: 800px;

        & button {
            height: 5.5rem !important;
            width: 100%;
            * {
                color: var(--pluto-gray-l7);
                font-size: var(--pluto-small-size);
                font-weight: 400;
            }
        }

        & .pluto-text--keyboard {
            font-size: 1.9rem !important;
            & svg {
                width: 2.1rem;
                height: 2.1rem;
            }
        }

        & .pluto-input {
            width: 100%;
        }
    }

    @media (max-width: 800px) {
        .search-box {
            width: 45vw !important;
            transform: none !important;
            position: relative;
            left: 0;
            & button {
                justify-content: start !important;
            }
        }
    }

    @media (max-width: 600px) {
        .search-box {
            width: 5.5rem !important;
            padding: 0 !important;

            & button {
                justify-content: center !important;
            }
            .pluto-text {
                display: none;
            }
            .pluto-btn__end-content {
                display: none;
            }
        }
    }

    .search-results__content {
        width: 800px;
        max-width: 100%;
        height: 400px;
        min-width: 400px;

        & .search-result {
            padding: 2rem;
            &:hover {
                background: var(--pluto-gray-l3);
            }

            & b {
                background: var(--pluto-primary-z-15);
            }

            & .pluto-breadcrumb {
                gap: 0.25rem !important;
                margin-left: 0.25rem;
                * {
                    font-size: 2.1rem;
                    line-height: 150%;
                }
                .synnax-icon {
                    transform: scale(0.8) translateY(0px) !important;
                }
            }

            & small {
                color: var(--pluto-gray-l8);
            }
        }
        & a:hover {
            text-decoration: none !important;
        }
    }
</style>
