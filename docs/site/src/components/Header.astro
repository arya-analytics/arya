---
import { Align } from "@synnaxlabs/pluto/align";
import { Icon, Logo } from "@synnaxlabs/media";
import Search from "@/components/search/Search.astro";
import { Button } from "@synnaxlabs/pluto";
---

<Align.Space className="main-header" justify="center" align="center" el="header">
    <Align.Space
        className="header-content"
        direction="x"
        justify="spaceBetween"
        align="center"
    >
        <a href="https://synnaxlabs.com">
            <Logo variant="title" />
        </a>
        <Button.Link
            className="version-button"
            variant="text"
            href="https://github.com/synnaxlabs/synnax"
            iconSpacing="small"
        >
            <Icon.Logo.Github slot="endIcon" />
            <p class="version" transition:persist></p>
        </Button.Link>
    </Align.Space>
    <Search />
</Align.Space>

<style is:global>
    .main-header {
        position: sticky;
        top: 0;
        background: var(--pluto-gray-l0-60);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        z-index: 100;
        height: 10rem;
        border-bottom: var(--pluto-border);
        width: 100%;

        & .version-button {
            & p {
                color: var(--pluto-gray-l7);
                font-weight: 400;
            }
            & .synnax-icon {
                color: var(--pluto-gray-l7);
                transform: scale(115%) translateY(-5%);
            }
        }

        & .synnax-logo--icon {
            display: none;
        }

        & .synnax-logo--title {
            height: 5rem;
        }

        @media (max-width: 1100px) {
            & .synnax-logo--title {
                margin-top: 1rem;
                height: 6rem;
                & text {
                    display: none;
                }
            }
        }
    }

    .header-content {
        width: 100%;
        max-width: var(--max-width);
        padding: 0 7rem;
    }
</style>
