---
import Article from "@/components/article/Article.astro";
import OnThisPage from "@/components/OnThisPage/OnThisPage.astro";
import PageNav from "@/components/PageNav/PageNav.astro";
import Root from "@/layouts/Root.astro";
const { headings, frontmatter } = Astro.props;
const {
    title,
    breadcrumb,
    heading,
    description,
    url,
    next,
    nextURL,
    prev,
    prevURL,
    published,
} = frontmatter;
---

<Root frontmatter={frontmatter} headings={headings}>
    <PageNav />
    <Article
        url={url}
        breadcrumb={breadcrumb}
        title={heading ?? title}
        description={description}
        published={published}
        next={next}
        prev={prev}
        nextURL={nextURL}
        prevURL={prevURL}
    >
        <slot />
    </Article>
    <OnThisPage headings={headings} url={Astro.url} />
</Root>
